<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="560dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:hint="Fast &amp; Furios Presents: Hobbs &amp; Shaw"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPoster"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="570dp"
        android:layout_height="75dp"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:hint="A spinoff of The Fate of the Furious focusing on Johnson's US Diplomatic Security Agent Luke Hobbs forming an unlikely allieance with Staham's Deskand Shaw"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ivPoster"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />
</RelativeLayout>